{
  "name": "fleet-management-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Fleet Management Platform - Monorepo",
  "workspaces": [
    "fleet-platform/apps/web-admin",
    "fleet-platform/apps/web-client",
    "fleet-platform/apps/admin"
  ],
  "scripts": {
    "dev": "npm run dev:admin",
    "dev:full": "concurrently -k -n API,ADMIN,CLIENT \"npm run dev:api\" \"npm run dev:admin\" \"npm run dev:client\"",
    "dev:api": "npm --prefix fleet-platform/apps/api run serve",
    "dev:admin": "npm run dev -w fleet-platform/apps/web-admin",
    "dev:client": "npm run dev -w fleet-platform/apps/web-client",
    "dev:all": "concurrently \"npm run dev:admin\" \"npm run dev:client\"",
    "build:firebase": "npm run build:admin && npm run build:client",
    "firebase:deploy:admin": "npm run build:admin && npx firebase-tools deploy --only hosting:admin",
    "firebase:deploy:client": "npm run build:client && npx firebase-tools deploy --only hosting:client",
    "firebase:deploy:firestore": "npx firebase-tools deploy --only firestore",
    "firebase:deploy:rules": "npx firebase-tools deploy --only firestore:rules",
    "firebase:deploy:indexes": "npx firebase-tools deploy --only firestore:indexes",
    "firebase:seed": "powershell -ExecutionPolicy Bypass -File ./scripts/seed-firestore.ps1",
    "firebase:deploy": "npm run build:firebase && npx firebase-tools deploy --only hosting",
    "build": "npm run build --workspaces",
    "build:admin": "npm run build -w fleet-platform/apps/web-admin",
    "build:client": "npm run build -w fleet-platform/apps/web-client",
    "test": "npm run test -w fleet-platform/apps/admin",
    "test:ui": "npm run test:ui -w fleet-platform/apps/admin",
    "test:e2e": "npm run test:e2e -w fleet-platform/apps/admin",
    "test:e2e:ui": "npm run test:e2e:ui -w fleet-platform/apps/admin",
    "lint": "npm run lint --workspaces",
    "install:all": "npm install --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
